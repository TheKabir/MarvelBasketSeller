<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MBlogo_background"
    tools:context=".ui.Addproduct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/MBlogo_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        android:elevation="10dp"
          android:paddingVertical="10dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginBottom="30sp"
        android:layout_marginTop="25sp"
        android:layout_height="match_parent"
        android:background="@color/MBlogo_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/inapp"
            android:padding="10sp"
            android:orientation="vertical"
            android:paddingTop="0sp">

            <Spinner
                android:id="@+id/productType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="@color/MBlogo_background"
                android:scrollbarSize="4dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:popupBackground="@color/MBlogo_background"
                android:scrollbarSize="4dp"
                android:spinnerMode="dropdown" />

            <LinearLayout
                android:id="@+id/pd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/buyerType"
                    android:layout_width="match_parent"
                    android:layout_marginTop="25sp"
                    android:layout_height="wrap_content"
                    android:popupBackground="@color/MBlogo_background"
                    android:scrollbarSize="4dp"
                    android:spinnerMode="dropdown" />

                <EditText
                    android:id="@+id/brandname"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="25sp"
                    android:ems="10"
                    android:hint="Product's Brand Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="5sp"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/pname"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="20sp"
                    android:ems="10"
                    android:hint="Product's Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="5sp"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="20sp"
                    android:ems="10"
                    android:gravity="clip_vertical"
                    android:hint="Description (General Details, Where to use it, Its Advantages, How to use)"
                    android:inputType="textMultiLine"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="20sp"
                    android:ems="10"
                    android:hint="Selling Price"
                    android:inputType="number"
                    android:paddingLeft="5sp"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/stock"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="20sp"
                    android:ems="10"
                    android:hint="No. Of Items In Stock"
                    android:inputType="number"
                    android:paddingLeft="5sp"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/pcolor"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="20sp"
                    android:ems="10"
                    android:hint="Item's Color"
                    android:inputType="text"
                    android:paddingLeft="5sp"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/weight"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="20sp"
                    android:ems="10"
                    android:hint="Item's Weight (In Grams)"
                    android:inputType="number|numberDecimal"
                    android:paddingLeft="5sp"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/size"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                   android:layout_marginTop="20sp"
                    android:ems="10"
                    android:hint="Item's Size"
                    android:inputType="text"
                    android:paddingLeft="5sp"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/dimensions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="0.8"
                        android:ems="10"
                        android:text="Dimensions :"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Length"
                        android:inputType="number|numberDecimal"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Width"
                        android:inputType="number|numberDecimal"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Height"
                        android:inputType="number|numberDecimal"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llspecs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="20sp"
                        android:ems="10"
                        android:gravity="clip_vertical"
                        android:paddingTop="5sp"
                        android:text="Additional Specifications :"
                        android:textColor="#FFFFFF"
                        android:textSize="19sp" />

                    <EditText
                        android:id="@+id/specs"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:ems="10"
                        android:gravity="clip_vertical"
                        android:hint="Provide Info like RAM size , Display Resolution, Processor, Graphics, Companions, Sounds ,etc"
                        android:inputType="textMultiLine"
                        android:paddingLeft="5sp"
                        android:paddingTop="5sp"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="18sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/selectimage"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/button_round"
                    android:scrollbarSize="4dp"
                    android:paddingLeft="5sp"
                    android:gravity="center"
                    android:text="Select Product's Images"
                    android:textAllCaps="false"
                    android:textColor="@color/textmenu"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10sp"
                    android:ems="10"
                    android:paddingTop="5sp"
                    android:text="Images Paths :"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/reqProduct"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/button_background"
                    android:text="Request To Add Product"
                    android:textColor="@color/textmenu"
                    android:textSize="18sp"
                    android:layout_marginBottom="15sp"/>

            </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>