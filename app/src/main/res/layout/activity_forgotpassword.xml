<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        style="@android:style/Widget.DeviceDefault.ScrollView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".forgotpassword"
        android:background="@android:color/background_dark">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        android:elevation="100dp"
        android:layout_marginHorizontal="15sp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="40sp"
        android:background="@color/cardeffect"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/cardeffect"
            android:padding="34dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/bn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="ENTER REGISTERED EMAIL"
                android:textColor="@android:color/background_light"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/acno"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:hint="xyz@abc.com"
                android:inputType="number"
                android:paddingLeft="5sp"
                android:textColor="@android:color/background_light"
                android:textColorHint="@color/hintcolor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/reqnewpass"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:background="@drawable/button_background"
                android:scrollbarSize="4dp"
                android:text="Send Password Reset link"
                android:textColor="@color/textmenu"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.82"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </ScrollView>