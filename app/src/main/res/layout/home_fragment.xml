<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/upload_pic_background"
    tools:context=".ui.home.Home">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/MBlogo_background"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/MBlogo_background">

<androidx.cardview.widget.CardView

    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="15dp"
    android:layout_margin="20dp"


>      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#252525"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:layout_weight="1"
                android:text="PRODUCT INSIGHTS"
                android:textColor="@color/txtcolor"
                android:textSize="20sp"
                android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:paddingHorizontal="15sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:text="Electronics"
            android:textColor="@color/txtcolor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="  :    "
            android:textColor="@color/txtcolor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/electronics"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="12560"
            android:textColor="@color/txtcolor"
            android:textSize="18sp" />
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="15sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:text="General Products"
                    android:textColor="@color/txtcolor"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="  :    "
                    android:textColor="@color/txtcolor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/general"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="5200"
                    android:textColor="@color/txtcolor"
                    android:textSize="18sp" />
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:text="Fashion Products"
            android:textColor="@color/txtcolor"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="  :    "
            android:textColor="@color/txtcolor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fashion"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="60380"
            android:textColor="@color/txtcolor"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:orientation="horizontal"
        android:paddingHorizontal="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:text="Books"
            android:textColor="@color/txtcolor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="  :    "
            android:textColor="@color/txtcolor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/book"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="4570"
            android:textColor="@color/txtcolor"
            android:textSize="18sp" />


    </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:background="#252525"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_margin="20dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="#252525">
        <TextView
            android:layout_marginTop="15sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textColor="@color/txtcolor"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="PRODUCT COUNT PIE"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pc"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_gravity="center" />

         </LinearLayout>
        </androidx.cardview.widget.CardView>

<!--Bar Graph Display-->

        <androidx.cardview.widget.CardView
            android:background="#252525"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#252525">

        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:textColor="@color/txtcolor"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="PRODUCT STATUS BAR"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bc"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15sp"
                android:layout_marginTop="10sp" />


        </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    </ScrollView>
</FrameLayout>