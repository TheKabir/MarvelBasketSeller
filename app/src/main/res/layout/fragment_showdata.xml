<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowData">

   <ScrollView
       android:background="@color/MBlogo_background"
       android:layout_width="match_parent"
       android:layout_height="match_parent">


      <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          app:cardCornerRadius="15dp"
          android:elevation="8dp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginRight="20dp"
          android:layout_height="wrap_content"
          android:background="@color/cardeffect"
          xmlns:android="http://schemas.android.com/apk/res/android">

      <LinearLayout
          android:layout_width="match_parent"
          android:padding="25sp"
          android:layout_height="wrap_content"
          android:background="@color/cardeffect"

          android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <TextView
                style="@style/headerText"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="Product Info" />

            <ImageButton
                android:id="@+id/edititemdata"
                android:layout_marginTop="3sp"
                style="@style/profileDetailsImage"
                android:layout_height="28dp"
                android:layout_width="28dp"
                android:layout_marginBottom="20dp"
                android:background="@null"/>

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/nameTextView"
                   style="@style/profileDetailsTextMain"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Brand Name" />

               <TextView
                   android:id="@+id/editProductName"
                   android:layout_marginTop="7sp"
                   android:layout_marginBottom="7sp"
                   style="@style/profileDetailsMiniText"
                   android:layout_marginLeft="10dp"
                   android:gravity="top"
                   android:text="Oneplus"
                   android:inputType="text"/>


            </LinearLayout>
         </LinearLayout>

         <View style="@style/proifleDetailsView" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <TextView
                   style="@style/profileDetailsTextMain"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Product Name" />

               <TextView
                   android:id="@+id/editProductBrand"
                     android:layout_marginTop="7sp"
                   android:layout_marginBottom="7sp"
                   style="@style/profileDetailsMiniText"
                   android:inputType="phone"
                   android:text="Oneplus 6"
                   android:gravity="top"
                   android:textColorHint="@color/textmenu" />

            </LinearLayout>
         </LinearLayout>

         <View style="@style/proifleDetailsView" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
               <TextView
                   style="@style/profileDetailsTextMain"
                   android:layout_toRightOf="@id/emailImageView"
                   android:text="Selling Price" />

               <EditText
                   android:id="@+id/editProductPrice"
                   android:gravity="top"
                   android:layout_height="wrap_content"
                   android:text="40000"
                   android:inputType="number"
                   style="@style/profileDetailsMiniText" />
            </LinearLayout>
         </LinearLayout>
         <View style="@style/proifleDetailsView" />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/shopNameTextView"
                   style="@style/profileDetailsTextMain"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Stock" />

               <EditText
                   android:id="@+id/editProductStock"
                   android:layout_height="wrap_content"
                   style="@style/profileDetailsMiniText"
                   android:layout_marginLeft="10dp"
                   android:gravity="top"
                   android:text="17"
                   android:inputType="number" />


            </LinearLayout>
         </LinearLayout>
         <View style="@style/proifleDetailsView" />

         <Button
             android:id="@+id/stopSales"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_gravity="center"
             android:layout_marginTop="15sp"
             android:background="@drawable/button_delete"
             android:text="STOP SALES"
             android:textSize="18sp" />

         <Button
             android:id="@+id/restartSales"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_gravity="center"
             android:layout_marginTop="15sp"
             android:background="@drawable/button_restart"
             android:text="RESTART SALES"
             android:textSize="18sp" />
      </LinearLayout>
      </androidx.cardview.widget.CardView>
   </ScrollView>
</FrameLayout>